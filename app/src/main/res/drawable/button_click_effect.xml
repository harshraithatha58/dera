<!-- button_click_effect.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <solid android:color="#4c7c41" /> <!-- Button background color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <solid android:color="#283618" /> <!-- Default button background color -->
        </shape>
    </item>
</selector>
