<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for EditText in normal state -->
    <item android:state_enabled="true" android:drawable="@drawable/edit_text_background_light" />
    <!-- Background color for EditText in disabled state -->
    <item android:state_enabled="false" android:drawable="@drawable/edit_text_background_light_disabled" />
    <!-- Background color for EditText in pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/edit_text_background_light_pressed" />
    <!-- Default background color for EditText -->
    <item android:drawable="@drawable/edit_text_background_light" />
</selector>
